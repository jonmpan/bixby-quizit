action (StartQuiz) {
  description (Keep prompting the user for answers until quiz is completed.)
  type (Calculation)
  collect {
    input (quiz) {
      type (Quiz)
      min (Required) max (One)
      default-init {
        intent {
          goal: GetQuiz
        }
      }
      validate {
        if (quiz.status == 'transition') {
          replan {
            intent {
              goal: CheckAnswer
              value { $expr(quiz) }
            }
          }
        }
      }
    }
  }
  output (Quiz)
}