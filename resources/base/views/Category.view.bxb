input-view {
  match: Category (categories) {
    to-input: GetQuiz (action)
  }

  message ("Alright, let's start a quiz! Select a category.")

  render {
    selection-of (categories) {
      where-each (category) {
        layout-macro (category-box) {
          param (category) { 
            expression (category)
          }
        }
      }
    }
  }
}